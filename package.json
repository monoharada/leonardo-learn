{
	"name": "leonardo-learn",
	"version": "0.1.0",
	"description": "OKLCH色空間を使用したデザインシステム向けカラーパレット生成ツール（Adobe Leonardo inspired）",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./styles": {
			"import": "./dist/styles/index.css"
		},
		"./styles/*": {
			"import": "./dist/styles/*"
		}
	},
	"scripts": {
		"dev": "bun run src/index.ts --watch",
		"build": "bun build src/index.ts --outdir=dist --target=browser --minify --sourcemap && tsc --emitDeclarationOnly --outDir dist && bun run build:css && bun run build:assets",
		"build:css": "mkdir -p dist/styles && cp src/ui/styles/*.css dist/styles/ && cat dist/styles/tokens.css dist/styles/components.css > dist/styles/index.css",
		"build:assets": "bun run scripts/copy-main-visual.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:perf": "cross-env CI_BENCH=1 bun test src/core/cud/performance.test.ts",
		"test:ci": "bun test && cross-env CI_BENCH=1 bun test src/core/cud/performance.test.ts && bun run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"serve": "serve",
		"type-check": "tsc --noEmit",
		"lint": "biome lint . --error-on-warnings",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check --write ."
	},
	"dependencies": {
		"@digital-go-jp/design-tokens": "^1.1.2",
		"@material/material-color-utilities": "^0.3.0",
		"apca-w3": "^0.1.9",
		"culori": "^4.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/bun": "latest",
		"@types/culori": "^4.0.1",
		"@types/jsdom": "^27.0.0",
		"cross-env": "^7.0.3",
		"jsdom": "^27.2.0",
		"playwright": "^1.57.0",
		"serve": "^14.2.4",
		"typescript": "^5.3.3"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/monoharada/leonardo-learn.git"
	},
	"keywords": [
		"color",
		"palette",
		"design-system",
		"accessibility",
		"wcag",
		"oklch",
		"contrast"
	],
	"author": "monoharada",
	"license": "MIT"
}
